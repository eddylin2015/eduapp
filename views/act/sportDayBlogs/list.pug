extends ./base.pug

block content
  h4 資訊

  a(href="/internal/sportdayblogs/add", class='btn btn-success btn-sm')
    i.glyphicon.glyphicon-plus
    span  Add 資訊

  each book in books
    .media
      a(href=`/internal/sportdayblogs/${book.id}`)
        .media-left
            img(src=`/app_static_file/act/bbs/${book.imageUrl}` || "/images/report.jpg")
        .media-body
          h4= book.title
          p= book.author

  if !books.length
    p No books found.

  if nextPageToken
    nav
      ul.pager
        li
          a(href=`?pageToken=${encodeURIComponent(nextPageToken)}`) More
