  .row
    .col-lg-3
      div#accordion
        div

          h3
            span 數學練習
          table(width="100%")
            +accor_li("/internal/TMS/trianing.o.jsp?ft=f1",'f1',"一元一次方程","math-formula.png","btnSTUDFORM")
            +accor_li("/internal/TMS/trianing.o.jsp?ft=f2",'f2',"有理數運算","math-formula.png","btnSTUDFORM")
            +accor_li("/internal/TMS/trianing.o.jsp?ft=f201",'f201',"十字相乘法","math-formula.png","btnSTUDFORM")
            +accor_li("/internal/TMS/trianing.o.jsp?ft=f202",'f202',"一元二次方程","math-formula.png","btnSTUDFORM")

          h3
            span 小學
          table(width="100%")
            +accor_li("/internal/TMS/trianing.o.jsp?ft=p2",'p2',"加減","math-formula.png","btnSTUDFORM")
            +accor_li("/internal/TMS/trianing.o.jsp?ft=p5",'p5',"方程式","math-formula.png","btnSTUDFORM")
          h3
            span 中一()
          table(width="100%")
            each sub in f1data
              +accor_li(`/internal/TMS/trianing.o.jsp?ft=${sub.id}`,`${sub.id}`,`${sub.name}`,"math-formula.png","btnSTUDFORM")
          h3
            span 中二()
          table(width="100%")
            each sub in f2data
              +accor_li(`/internal/TMS/trianing.jsp?ft=${sub.id}`,`${sub.id}`,`${sub.name}`,"math-formula.png","btnSTUDFORM")
          h3(width="100%")
            span 中三()
          table  
            each sub in f2data
              +accor_li(`/internal/TMS/trianing.jsp?ft=${sub.id}`,`${sub.id}`,`${sub.name}`,"math-formula.png","btnSTUDFORM")
    .col-lg-7
  div(title="Info Dialog",style="display:none")#ClassSelectorDialog
    form(action="#")#ClassSelectorDialogForm
      table
        tr
          td 起始日期
          td
            input(type="text", name="sDate", value=`${sDate}`)#sDate
        tr
          td 結束日期
          td
            input(type="text", name="eDate", value=`${eDate}`)#eDate
        //tr
          td 學段
          td
            Select(name="term")
              Option(value=1) 第1段
              Option(value=2) 第2段
              Option(value=3) 第3段
              Option(value=4) 學年              
        tr
          td 班別
          td
            input(name="classno")
            //Select(name="classno")          
              if kstafpanel  
                each classN in classli
                  Option(value=classN)= classN

              if pstafpanel  
                each classN in classlp
                  Option(value=classN)= classN
              if sstafpanel
                each classN in classls
                  Option(value=classN)= classN
        tr
          td
          td
            input(type="submit",value="submit")
