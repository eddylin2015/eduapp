          //img(src=`/images/${ico}`)
      td(width="90%")    
        a(href=link,id=btnid) 
          h4= itemName.toUpperCase()
  script(src='/javascripts/cool/webtoolkit.aim.js')
  style.
    div.container{ margin:0px; }
  script.
    $( function() {
