extends ./base.pug

block content
  div #{action} 
  form(method="POST", enctype="multipart/form-data")
    .form-group.hidden
      label(for="title") 標題
      input.form-control(type="text", name="title", id="title", value=book.title)
    .form-group.hidden
      label(for="author") Author
      input.form-control(type="text", name="author", id="author", value=book.author, readonly=true)
    .form-group.hidden
      label(for="authorname") authorname
      input.form-control(type="text", name="authorname", id="authorname", value=book.authorname, readonly=true)
    .form-group
      label(for="logDate") 日期
      input.form-control(type="Date", name="logDate", id="logDate", value=book.logDate)
    .form-group
      label(for="A") 第一節:
      textarea.form-control(rows=3, name="A", id="A", value=book.A)= book.A
    .form-group
      label(for="B") 第二節:
      textarea.form-control(rows=3, name="B", id="B", value=book.B)= book.B
    .form-group
      label(for="C") 第三節:
      textarea.form-control(rows=3, name="C", id="C", value=book.C)= book.C
    .form-group
      label(for="D") 第四節:
      textarea.form-control(rows=3, name="D", id="D", value=book.D)= book.D
    .form-group
      label(for="E") 第五節:
      textarea.form-control(rows=3, name="E", id="E", value=book.E)= book.E
    .form-group
      label(for="F") 第六節:
      textarea.form-control(rows=3, name="F", id="F", value=book.F)= book.F
    .form-group
      label(for="G") 第七節:
      textarea.form-control(rows=3, name="G", id="G", value=book.G)= book.G
    .form-group
      label(for="H") 第八節:
      textarea.form-control(rows=3, name="H", id="H", value=book.H)= book.H
    .form-group
      label(for="I") 備註1:
      textarea.form-control(rows=3, name="I", id="I", value=book.I)= book.I
    .form-group.hidden
      label(for="J") 備註2:
      textarea.form-control(rows=5, name="J", id="J", value=book.J)= book.J
    .form-group.hidden
      label(for="createdBy") Created by 
      input.form-control(type="text", name="createdBy", id="createdBy", value=book.createdBy)
    .form-group.hidden
      label(for="createdById") Created by ID
      input.form-control(type="text", name="createdById", id="createdById", value=book.createdById)
    .form-group.hidden
      label(for="ModifiedBy") ModifiedBy
      input.form-control(type="text", name="ModifiedBy", id="ModifiedBy", value=book.ModifiedBy)
    .form-group.hidden
      label(for="ModifiedById") ModifiedById
      input.form-control(type="text", name="ModifiedById", id="ModifiedById", value=book.ModifiedById)
    button.btn.btn-success(type="submit") Save
